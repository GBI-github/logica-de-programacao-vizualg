Algoritmo "contador(USUARIO)"

Var
   numero,contador,casa:inteiro
Inicio
   contador <- 0
   escreva("quantos numeros voce quer que mostre: ")
   leia(numero)
   escreva("Voce quer pular quantas casas exp 0,2,4,6: ")
   leia(casa)
   enquanto (contador <= numero)faca
      contador <- (contador + casa)
      escreval(contador-casa)
   fimenquanto

Fimalgoritmo
